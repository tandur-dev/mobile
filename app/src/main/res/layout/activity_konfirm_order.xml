<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F2F2"
    tools:context=".view.KonfirmOrderActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:orientation="horizontal"
                android:background="@android:color/white">
                
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="88dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_no_image_lahan_terdekat"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewNamaLahan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_semi_bold"
                        android:textSize="11sp"
                        android:textColor="#7CBD1E"
                        android:text="Nama Lahan"/>

                    <TextView
                        android:id="@+id/textViewHarga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:textSize="12sp"
                        android:textColor="#4A4A4A"
                        android:text="Harga"/>

                    <TextView
                        android:id="@+id/textViewLuas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/open_sans_regular"
                        android:textSize="9sp"
                        android:textColor="#828282"
                        android:text="Luas"/>

                    <TextView
                        android:id="@+id/textViewFasilitas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_regular"
                        android:textSize="9sp"
                        android:textColor="#828282"
                        android:text="Fasilitas"/>

                </LinearLayout>
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:orientation="vertical"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_semi_bold"
                        android:textSize="14sp"
                        android:textColor="#4A4A4A"
                        android:text="Durasi Sewa (Bulan)"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/materialButtonKurangBulan"
                            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                            android:layout_width="28dp"
                            android:layout_height="40dp"
                            android:backgroundTint="#7CBD1E"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:fontFamily="@font/open_sans_bold"
                            android:padding="0dp"
                            android:text="-"
                            android:textColor="@android:color/white"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/editTextBulan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginEnd="3dp"
                            android:layout_marginRight="3dp"
                            android:fontFamily="@font/open_sans_regular"
                            android:gravity="center"
                            android:inputType="number"
                            android:enabled="false"
                            android:text="1"
                            android:textColor="#7CBD1E"
                            android:textSize="12sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/materialButtonTambahBulan"
                            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                            android:layout_width="28dp"
                            android:layout_height="40dp"
                            android:backgroundTint="#7CBD1E"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:fontFamily="@font/open_sans_bold"
                            android:padding="0dp"
                            android:text="+"
                            android:textColor="@android:color/white"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:padding="16dp"
                    android:orientation="horizontal"
                    android:background="#F2F2F2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_regular"
                            android:textSize="12sp"
                            android:textColor="#4A4A4A"
                            android:text="Mulai Pada"/>

                        <TextView
                            android:id="@+id/textViewMulaiPada"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_bold"
                            android:textSize="14sp"
                            android:textColor="#4A4A4A"
                            android:text="-"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_regular"
                            android:textSize="12sp"
                            android:textColor="#4A4A4A"
                            android:text="Selesai Pada"/>

                        <TextView
                            android:id="@+id/textViewSelesaiPada"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_bold"
                            android:textSize="14sp"
                            android:textColor="#4A4A4A"
                            android:text="-"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:orientation="vertical"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_semi_bold"
                    android:textSize="14sp"
                    android:textColor="#4A4A4A"
                    android:text="Informasi Penyewa"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_regular"
                        android:textSize="12sp"
                        android:textColor="#828282"
                        android:text="Penyewa"/>

                    <TextView
                        android:id="@+id/textViewPenyewa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_semi_bold"
                        android:textSize="12sp"
                        android:textColor="#7CBD1E"
                        android:gravity="right"
                        android:text="-"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_regular"
                        android:textSize="12sp"
                        android:textColor="#828282"
                        android:text="Email"/>

                    <TextView
                        android:id="@+id/textViewEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_semi_bold"
                        android:textSize="12sp"
                        android:textColor="#7CBD1E"
                        android:gravity="right"
                        android:text="-"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_regular"
                        android:textSize="12sp"
                        android:textColor="#828282"
                        android:text="No Telp"/>

                    <TextView
                        android:id="@+id/textViewNoTelepon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_semi_bold"
                        android:textSize="12sp"
                        android:textColor="#7CBD1E"
                        android:gravity="right"
                        android:text="-"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:orientation="vertical"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_semi_bold"
                    android:textSize="14sp"
                    android:textColor="#4A4A4A"
                    android:text="Detail Harga"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="top"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewItemLahan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_regular"
                        android:textSize="12sp"
                        android:textColor="#828282"
                        android:text="Harga"/>

                    <TextView
                        android:id="@+id/textViewDetailHarga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_bold"
                        android:textSize="14sp"
                        android:textColor="#4A4A4A"
                        android:gravity="right"
                        android:text="0"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_regular"
                        android:textSize="12sp"
                        android:textColor="#828282"
                        android:text="Tandur Fee"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_semi_bold"
                        android:textSize="12sp"
                        android:textColor="#7CBD1E"
                        android:gravity="right"
                        android:text="Free"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:orientation="horizontal"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_regular"
                android:textSize="10sp"
                android:textColor="#828282"
                android:text="Total Biaya Sewa"/>

            <TextView
                android:id="@+id/textViewTotalBiayaSewa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_bold"
                android:textSize="16sp"
                android:textColor="#4A4A4A"
                android:text="0"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButtonLanjutkan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#7CBD1E"
            android:text="Lanjutkan"
            android:textAllCaps="false"
            android:textColor="#FCF9F9"/>

    </LinearLayout>

</LinearLayout>