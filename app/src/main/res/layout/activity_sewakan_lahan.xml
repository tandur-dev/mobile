    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.SewakanLahanActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semi_bold"
                android:textSize="14sp"
                android:textColor="#7CBD1E"
                android:text="Informas Lahan"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:boxCornerRadiusBottomEnd="6dp"
                app:boxCornerRadiusBottomStart="6dp"
                app:boxCornerRadiusTopEnd="6dp"
                app:boxCornerRadiusTopStart="6dp"
                app:hintEnabled="true"
                app:startIconTint="#828282">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditTextNamaLahan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_regular"
                    android:hint="Nama Lahan"
                    android:inputType="text"
                    android:textColor="#4A4A4A"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:boxCornerRadiusBottomEnd="6dp"
                app:boxCornerRadiusBottomStart="6dp"
                app:boxCornerRadiusTopEnd="6dp"
                app:boxCornerRadiusTopStart="6dp"
                app:hintEnabled="true"
                app:startIconTint="#828282">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditTextAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_regular"
                    android:hint="Alamat"
                    android:inputType="textPostalAddress"
                    android:textColor="#4A4A4A"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/open_sans_regular"
                android:text="Provinsi"
                android:textColor="#828282"
                android:textSize="12sp" />

            <Spinner
                android:id="@+id/spinnerProvinsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:spinnerMode="dialog"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/open_sans_regular"
                android:text="Kota / Kabupaten"
                android:textColor="#828282"
                android:textSize="12sp" />

            <Spinner
                android:id="@+id/spinnerKotaKabupaten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:spinnerMode="dialog"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/open_sans_regular"
                android:text="Kecamatan"
                android:textColor="#828282"
                android:textSize="12sp" />

            <Spinner
                android:id="@+id/spinnerKecamatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:spinnerMode="dialog"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/open_sans_regular"
                android:text="Kelurahan"
                android:textColor="#828282"
                android:textSize="12sp" />

            <Spinner
                android:id="@+id/spinnerKelurahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:spinnerMode="dialog"/>

            <CheckBox
                android:id="@+id/checkBoxAlamatLahanSamaDenganAlamatRumah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Alamat lahan sama dengan alamat rumah"
                android:fontFamily="@font/open_sans_regular"
                android:textColor="#828282"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:fontFamily="@font/open_sans_regular"
                android:text="Lokasi Lahan"
                android:textColor="#828282"
                android:textSize="12sp" />

            <RadioGroup
                android:id="@+id/radioGroupLokasiLahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radioButtonHalamanTerasRumah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Halaman / Teras Rumah"
                    android:fontFamily="@font/open_sans_regular"
                    android:textColor="#828282"
                    android:checked="true"
                    android:textSize="14sp"/>

                <RadioButton
                    android:id="@+id/radioButtonLahanBerbedaDariRumah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lahan Berbeda dari Rumah"
                    android:fontFamily="@font/open_sans_regular"
                    android:textColor="#828282"
                    android:textSize="14sp"/>

            </RadioGroup>

